@model Merachel.Domain.Entities.CollectionPicture

<tr>
    <td>@Model.CollectionPictureID</td>
    <td>
        <div style="float: left; margin-right: 20px">
            <img width="75" height="100" src="data:image/png;base64,@System.Convert.ToBase64String(Model.CollectionPictureImageData)" />
        </div>

    </td>
    <td>
        @using (Html.BeginForm("DeleteCollectionPicture", "Admin"))
        {
            @Html.Hidden("collectionpictureid", Model.CollectionPictureID)
            <input type="submit"
                   class="btn btn-danger btn-xs"
                   value="Delete" />
        }
    </td>
</tr>
