@model IEnumerable<Merachel.Domain.Entities.Collection>

@{
    ViewBag.Title = "Collection";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Collection</h1>

<p>
    <a href="@Url.Action("AddCollection", "Admin")" class="btn btn-primary">Tambah Galeri Baru</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CollectionTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CollectionTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCollection", new { collectionid = item.CollectionID }) |
            @Html.ActionLink("Picture", "CollectionPicture", new { collectionid = item.CollectionID }) |
            @using (Html.BeginForm("DeleteCollection", "Admin"))
            {
                @Html.Hidden("collectionid", item.CollectionID)
                <input type="submit"
                       class="btn btn-default btn-xs"
                       value="Delete" />
            }
        </td>
    </tr>
}

</table>
