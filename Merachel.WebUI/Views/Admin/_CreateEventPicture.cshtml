@model Merachel.Domain.Entities.EventPicture

@using (Html.BeginForm("AddEventPicture", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(m => m.EventID)
        <div class="form-group">
            @Html.LabelFor(model => model.EventPictureMimeType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Upload new image:
                <input type="file" name="Image" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="+ Add Picture" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
