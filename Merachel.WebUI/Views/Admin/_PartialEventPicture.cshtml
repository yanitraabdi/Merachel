@model Merachel.Domain.Entities.EventPicture

<tr>
    <td>@Model.EventPictureID</td>
    <td>
        <div style="float: left; margin-right: 20px">
            <img width="75" height="100" src="data:image/png;base64,@System.Convert.ToBase64String(Model.EventPictureImageData)" />
        </div>

    </td>
    <td>
        @using (Html.BeginForm("DeleteEventPicture", "Admin"))
        {
            @Html.Hidden("eventpictureid", Model.EventPictureID)
            <input type="submit"
                   class="btn btn-danger btn-xs"
                   value="Delete" />
        }
    </td>
</tr>
