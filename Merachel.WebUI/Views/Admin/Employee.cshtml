@model IEnumerable<Merachel.Domain.Entities.Employee>

@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tutor</h2>

<p>
    <a href="@Url.Action("AddEmployee", "Admin")" class="btn btn-primary">Tambah Tutor Baru</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeSpecial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeSpecial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditEmployee", new { employeeid = item.EmployeeID }) |
            @using (Html.BeginForm("DeleteEmployee", "Admin"))
            {
                @Html.Hidden("employeeid", item.EmployeeID)
                <input type="submit"
                       class="btn btn-default btn-xs"
                       value="Delete" />
            }
        </td>
    </tr>
}

</table>
